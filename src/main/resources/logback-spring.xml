<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- Propriedades para facilitar configuração -->
    <property name="LOG_LEVEL_ROOT" value="${LOG_LEVEL_ROOT:-INFO}"/>
    <property name="LOG_LEVEL_APP" value="${LOG_LEVEL_APP:-INFO}"/>
    <property name="LOG_PATTERN_CONSOLE" value="${LOG_PATTERN_CONSOLE:-%clr(%d{HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr([%X{traceId:-}]){yellow} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}"/>

    <!-- Console Appender otimizado -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${LOG_PATTERN_CONSOLE}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <!-- Filtro para reduzir verbosidade em produção -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- File Appender para logs críticos -->
    <appender name="CRITICAL" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE:-logs/critical.log}</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{traceId:-}] - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/critical-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Appender assíncrono otimizado para performance em produção -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>20</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <maxFlushTime>1000</maxFlushTime>
        <neverBlock>true</neverBlock>
    </appender>
    
    <!-- Appender assíncrono para logs críticos -->
    <appender name="ASYNC_CRITICAL" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CRITICAL"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <neverBlock>false</neverBlock>
    </appender>

    <!-- Loggers específicos -->
    
    <!-- Aplicação principal -->
    <logger name="br.com.devquote" level="${LOG_LEVEL_APP}" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="ASYNC_CRITICAL"/>
    </logger>

    <!-- Spring Security (reduzido) -->
    <logger name="org.springframework.security" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>

    <!-- Hibernate/JPA (apenas erros em produção) -->
    <logger name="org.hibernate" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>

    <!-- HTTP Requests (apenas em desenvolvimento) -->
    <logger name="org.springframework.web.servlet.DispatcherServlet" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>

    <!-- Root logger -->
    <root level="${LOG_LEVEL_ROOT}">
        <appender-ref ref="ASYNC_CONSOLE"/>
        <appender-ref ref="ASYNC_CRITICAL"/>
    </root>

    <!-- Perfis específicos -->
    <springProfile name="dev,local">
        <!-- Em desenvolvimento, mais logs -->
        <logger name="br.com.devquote" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
        <logger name="org.springframework.web" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <!-- Em produção, logs otimizados -->
        <logger name="br.com.devquote" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_CONSOLE"/>
            <appender-ref ref="ASYNC_CRITICAL"/>
        </logger>
    </springProfile>

</configuration>