# ==============================================
# DevQuote Backend - Variáveis de Ambiente
# ==============================================

# DATABASE
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5434/devquote
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=root

# JWT SECURITY
APP_JWTSECRET=minha-chave-secreta-jwt-de-256-bits-bem-complexa-e-segura-para-produção
SECURITY_ISSUER=http://localhost:8080

# FRONTEND URL (para CORS)
APP_FRONTEND_URL=http://localhost:5173

# EMAIL CONFIGURATION (Gmail)
DEVQUOTE_EMAIL_ENABLED=true
DEVQUOTE_EMAIL_FROM=seu-email@gmail.com
DEVQUOTE_EMAIL_FINANCE=financeiro@empresa.com
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app-gmail

# EMAIL SMTP (opcionais - têm padrões)
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_SMTP_SSL_TRUST=smtp.gmail.com

# AWS S3 CONFIGURATION
AWS_ACCESS_KEY_ID=sua-access-key-id
AWS_SECRET_ACCESS_KEY=sua-secret-access-key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=devquote-attachments

# SERVER PORT (para deploy em cloud)
PORT=8080

# LOG LEVEL
LOG_LEVEL_APP=INFO